<view class="timeline-list">
  <scroll-view
    class="scroll-view"
    scroll-y
    lower-threshold="100"
    bindscrolltolower="scrolltolower"
  >
    <view class="ul">
      <view
        class='timeline-item li'
        data-index="{{index}}"
        data-name="{{item.name}}"
        data-img="{{item.img}}"
        wx:for="{{datasource}}"
        wx:key="_id"
      >
        <!-- <view class="timeline-item__tail">
        </view> -->
        <!-- <view class="timeline-item__node">
          <block wx:if="{{item.characters && item.characters.length}}">
            <navigator
              url="/pages/characters/detail/characterDetail?id={{characher.id}}"
              class="character-avator"
              wx:for="{{item.characters}}"
              wx:for-item="characher"
              wx:key="id"
            >
              <image class="image" src="{{characher.avator}}" />
            </navigator>
          </block>
        </view> -->
        <view class="timeline-item__wrapper">
          <view class="timeline-item__timestamp">
            {{item.showAge}}
            <text class="tag" wx-if="{{item.tags.length > 0}}">{{item.tags[0]}}ç¯‡</text>
            <text class="source">{{item.source}}</text>
          </view>
          <view class="card">
            <view class="card__body">
              <view class="detail">
                <view>{{item.title}}</view>
                <image
                  wx-if="{{showImage && item.photo}}"
                  class="image"
                  src='{{item.photo}}'
                  mode="widthFix"
                  lazy-load='{{true}}'
                />
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <end wx:if="{{idend}}" />
    <empty wx:if="{{isempty}}" />
    <fetching wx:if="{{isloading}}" />
  </scroll-view>
</view>

