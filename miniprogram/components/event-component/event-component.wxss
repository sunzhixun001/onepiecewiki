.boxRadius .head{
	display: flex;
	padding: 20rpx;
	align-items: center;
	position: relative;
}
.head .showage{
	border-bottom: 2px solid #DDE1E6;
	font-weight: bold;
	color: #000;
	flex: 1;
	padding-bottom: 10rpx;
}
.head .source {
  color: #777;
}
.age{
	font-size: 24rpx;
	width: 60rpx;
	height: 60rpx;
	border-radius: 40rpx;
	color: #FFF;
	background-color:#D9312B; 
	display: flex;
	justify-content: center;
	align-items: center;
	border: solid #FFF 10rpx;
	margin-top: 10rpx;
}
.boxRadius .body .title{
  font-size: 28rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.photo{
	overflow: hidden;
	margin-top: 20rpx;
  display: flex;
  height: 169rpx;
  position: relative;
}
.photo image{
	width: 100%;
}
.shine{
  position: absolute;
  height: 300rpx;
  width: 100rpx;
  top: -50rpx;
  background: linear-gradient(to right,rgba(255,255,255,0.2), rgba(255,255,255,0.5),rgba(255,255,255,0.2));
  transform: rotate(25deg);
  animation: imageshine 8s;
  animation-iteration-count: infinite;
}
@keyframes imageshine{
  0%, 75%{
    transform: translateX(-200rpx) rotate(25deg);
  }
  100%{
    transform: translateX(1000rpx) rotate(25deg);
  }
}