	color: #3D3D3D;
}
.banner-area{
  padding-top: 30rpx;
  margin-bottom: 50rpx;
}
swiper{
  height: 310rpx;
}
.item-container{
  position: relative;
  padding: 20rpx 20rpx 20rpx 0;
}
swiper .img{
  height: 280rpx;
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow: 2px 2px 4px 1px rgba(0, 0, 0, 0.5);
}
swiper .img image{
  width: 100%;
  break-inside: avoid;
}
swiper .item-container .years{
  position: absolute;
  bottom: 50rpx;
  left: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-size: 1.2rem;
  text-shadow: 1px 1px 0 #212121;
}
swiper .item-container .title{
  position: absolute;
  top: 50rpx;
  left: 40rpx;
  text-shadow: 1px 1px 1px #FFFFFF;
  color: #D9312B;
  font-weight: 800;
  font-size: 1.4rem;
}
/* 瀑布流 故事篇章列表 */
.water-area{
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 20rpx;
  background: #f4f4f4;
}
.water-area .li{
  background: #FFFFFF;
  margin-bottom: 20rpx;
  break-inside: avoid;
}
.water-area{
  column-count: 2;
  column-gap: 2%;
  column-fill: auto;
  padding-bottom: 50rpx;
}
.water-area .detail{
  padding: 20rpx;
}
.water-area .img{
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
  display: flex;
  align-items: center;
  break-inside: avoid;
}
.water-area image{
  width: 100%;
  break-inside: avoid;
}