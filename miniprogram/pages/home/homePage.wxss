@import "../../style/commos.wxss";
page{
	height: 100%;
	background-image: url(https://6465-develop-6e54e7-1259274378.tcb.qcloud.la/img/Wiki-background.jpg?sign=cf18c1ff8a9b8ff9b7bc4516e1f70ad0&t=1558681071);
	color: #3D3D3D;
}
.banner-area{
  padding-top: 30rpx;
  padding-left: 20rpx;
}
swiper{
  height: 820rpx;
}
swiper .img{
  height: 820rpx;
  overflow: hidden;
  padding: 20rpx 20rpx 20rpx 0;
  position: relative;
}
swiper .img image{
  width:100%;
  height: 90%;
  border-radius: 20rpx;
  box-shadow: 2px 2px 4px 1px rgba(0, 0, 0, 0.5);
}
swiper .img .years{
  position: absolute;
  bottom: 150rpx;
  left: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-size: 1.2rem;
  text-shadow: 1px 1px 0 #212121;
}
swiper .img .title{
  position: absolute;
  top: 50rpx;
  left: 40rpx;
  text-shadow: 1px 1px 0 #212121;
  color: #FFFFFF;
  font-weight: 800;
  font-size: 1.4rem;
}