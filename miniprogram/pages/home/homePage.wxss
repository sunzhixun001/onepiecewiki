/* 搜索 */
.search-area{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 20rpx;
  margin-bottom: 30rpx;
}
.search-area .input{
  height: 60rpx;
  border-radius: 25rpx;
  background-color: #F5F5F5;
  position: relative;
  display: flex;
  align-items: center;
}
.search-area .input .placehold{
  font-size: 28rpx;
  flex: 1;
}
.search-area .icon{
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-area .fa{
  color: #999999;
  font-size: 32rpx;
  font-weight: 200;
}
/* banner */
.banner-area{
  padding-top: 30rpx;
  margin-bottom: 50rpx;
}
swiper{
  height: 310rpx;
}
.item-container{
  position: relative;
  padding: 20rpx 20rpx 20rpx 0;
}
swiper .img{
  height: 280rpx;
  overflow: hidden;
  border-radius: 20rpx;
  box-shadow: 2px 2px 4px 1px rgba(0, 0, 0, 0.5);
}
swiper .img image{
  width: 100%;
  break-inside: avoid;
}
swiper .item-container .years{
  position: absolute;
  bottom: 50rpx;
  left: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  font-size: 1.2rem;
  text-shadow: 1px 1px 0 #212121;
}
swiper .item-container .title{
  position: absolute;
  top: 50rpx;
  left: 40rpx;
  text-shadow: 1px 1px 1px #FFFFFF;
  color: #D9312B;
  font-weight: 800;
  font-size: 1.4rem;
}
/* 瀑布流 故事篇章列表 */
.water-area{
  padding-left: 2%;
  padding-right: 2%;
  padding-top: 20rpx;
  background: #f2f5f7;
}
.water-area{
  column-count: 2;
  column-gap: 2%;
  column-fill: auto;
  padding-bottom: 50rpx;
}