<block>
  <view class='nav-wrap'>
    <view class='nav-content' style='height:{{statusBarHeight}}px'>
      <view class='nav-head'>
        <view bindtap="bindSearchIcon" wx:if="{{!searchActive}}">
          <text class='fa fa-search'/>
        </view>
        <view bindtap="bindSearchCloseIcon" wx:else>
          <text class='fa fa-close'/>
        </view>
      </view>
      <view class='nav-title'><text>海贼王时间线</text></view>
    </view>
    <view class='mainTitleArea bgGray {{searchActive?"":"disabled"}}'>
        <view class='searchDetailArea'>
          <view class='inner'>
            <input 
              placeholder='路飞' 
              bindinput='bindSearchInput' 
              value='{{keyword}}' 
              confirm-type="搜索"
              bindconfirm="bindJumpSearch"
            />
          </view>
        </view>
        <view class='searchIcon' bindtap='bindJumpSearch'>
          <icon type="search" size="16" color='#3D3D3D'/>
        </view>
      </view>
  </view>
  <view class='container' style="margin-top: {{searchInputHeight}}rpx">
    <view class='main timeline listPage' style='margin-top: {{statusBarHeight}}px'>
      <view class='cw'>
        <view class='listArea'>
          <view class='ul itemList'>
            <view class='li' wx:for="{{events}}" wx:key="_id">
              <view class='boxRadius'>
                <view class='head'>
                  <view class='showage'>{{item.showAge}}</view>
                  <!-- <view class='triangle'></view> -->
                </view>
                <view class='body'>
                  <view class='title'>{{item.title}}</view>
                  <view class='photo' wx:if="{{item.photo}}">
                    <image src='{{item.photo}}' mode="widthFix" lazy-load='{{true}}'></image>
                  </view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class='control' wx:if="{{true}}">
      <view class='control-inner'>
        <view bindtap='bindAdmin'>管理</view>
      </view>
    </view>
  </view>
</block>