@import "../../../style/commos.wxss";
.para{
  text-indent: 56rpx;
  margin-bottom: 30rpx;
  line-height: 48rpx;
}
swiper{
  margin-bottom: 40rpx;
}
swiper-item image{
  width: 100%;
}
.summary-wrap, .character-wrap{
  padding-left: 5%;
  padding-right: 5%;
  margin-bottom: 100rpx;
}
.summary-wrap .h3, .character-wrap .h3{
  font-weight: bold;
  border-bottom: 2px solid #DDE1E6;
  padding-bottom: 0.9em;
}
.summary-wrap .ul,.character-wrap .ul{
  margin-top: 40rpx;
}
.character-wrap .ul{
  display: flex;
  flex-wrap: wrap;
}
.character-wrap .li{
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}
.character-wrap .li image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 4px;
}