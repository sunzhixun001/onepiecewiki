/* tab */
.bgGray{
	background-color: #F7F7F7;
}
.borderBottom{
	border-bottom: 1px solid rgba(0,0,0,0.08);
}
.listPage .tabListArea {
	height: 128rpx;
	position: relative;
}
.listPage .tabListArea .headerTabList {
	text-align: center;
	height: 100%;
	padding: 0 30px;
}
.swiper-wrapper{
	height: 100%;
}
.listPage .tabListArea .headerTabList .swiper-wrapper{
	display: flex;
	align-items: center;
	justify-content: center;
}
.listPage .tabListArea .headerTabList .item{
	padding: 0;
	margin: 0 1em;
	height: 100%;
	display: flex;
	align-items: center;
	position: relative;
}
.listPage .tabListArea .headerTabList .item.on::after{
	content: "";
	display: block;
	width: 100%;
	border-bottom: 6rpx solid #D9312B;
	position: absolute;
	bottom: 0;
}
.listPage .tabListArea .headerTabList .item text{
	font-weight: bold;
	color: rgb(61, 61, 61);
}
.listPage .tabListArea .headerTabList .item.on text{
	color: #D9312B;
}
/* list */
.listPage{
  width: 100%;
  font-size: 28rpx;
}
.cw{
  padding-left: 5%;
  padding-right: 5%;
}
.item{
  padding-top: 40rpx;
}
.item navigator{
  display: flex;
  border: solid 1px rgba(0, 0, 0, 0.08);
  border-radius: 4rpx;
}
.detailBox{
  margin-right: auto;
  padding: 30rpx 0 0 30rpx;
}
.charaName{
  color: rgb(61, 61, 61);
}
.subComment{
  font-weight: bold;
  color: #9DA0A3;
  margin-top: 8rpx;
  line-height: 36rpx;
}
.thumb{
  width: 192rpx;
  height: 192rpx;
}
.thumb image{
  width: 192rpx;
  height: 192rpx;
}