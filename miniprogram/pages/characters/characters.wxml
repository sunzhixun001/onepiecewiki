<view class='container'>
  <view class='listPage'>
		<view class='bgGray borderBottom tabListArea'>
			<view class='swiper-container headerTabList'>
				<view class='swiper-wrapper'>
					<view 
            class="swiper-slide item {{item.index === tabIndex ? 'on':''}}" 
            wx:for="{{tabs}}" 
            wx:key="index"
            data-index="{{item.index}}"
            bindtap="bindTabChange"
          >
            <text>{{item.name}}</text>
					</view>
				</view>
			</view>
		</view>
    <view class='cw'>
      <view class='listArea'>
        <view class='itemList'>
          <view class='item' wx:for="{{characters}}" wx:key="_id">
            <navigator url='../characterDetail/characterDetail?id={{item._id}}'>
              <view class='detailBox'>
                <view class='charaName'>{{item.fullname}}</view>
                <view class='subComment' wx:if="{{tabIndex === 0 || tabIndex === 1}}">{{item.bounty}}</view>
                <view class='subComment' wx:if="{{tabIndex === 2}}">{{item.devilfruitType + '  ' +item.devilfruitName}}</view>
              </view>
              <view class='thumb'>
                <image src='{{item.avator}}' binderror="bindAvatoError" lazy-load="{{true}}"/>
              </view>
            </navigator>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
