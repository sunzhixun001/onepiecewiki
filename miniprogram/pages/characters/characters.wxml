<view class='container'>
  <view class='listPage'>
		<view class='bgGray borderBottom tabListArea'>
			<view class='swiper-container headerTabList'>
				<view class='swiper-wrapper'>
					<view class='swiper-slide item on'>
						<text>草帽团</text>
					</view>
					<view class='swiper-slide item'>
						<text>悬赏金</text>
					</view>
					<view class='swiper-slide item'>
						<text>恶魔果实</text>
					</view>
				</view>
			</view>
		</view>
    <view class='cw'>
      <view class='listArea'>
        <view class='itemList'>
          <view class='item' wx:for="{{characters}}" wx:key="_id">
            <navigator>
              <view class='detailBox'>
                <view class='charaName'>{{item.fullname}}</view>
                <view class='subComment'>{{item.bounty}}</view>
              </view>
              <view class='thumb'>
                <image src='{{item.avator}}' />
              </view>
            </navigator>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
